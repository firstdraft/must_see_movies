<!-- Validation failure messages -->

<% if @actor.errors.any? %>
  <% @actor.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Actor</h3>
      </div>
      <div class="panel-body">
        <%= form_tag actors_url, :method => "post", :class => "form-horizontal" do %>
          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Name
            </label>
            <div class="col-sm-10">
              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @actor.name %>">
            </div>
          </div>

          <!-- Label and input for bio -->
          <div class="form-group">
            <label for="bio" class="col-sm-2 control-label">
              Bio
            </label>
            <div class="col-sm-10">
              <textarea id="bio" name="bio" placeholder="Bio" class="form-control" rows="3"><%= @actor.bio %></textarea>
            </div>
          </div>

          <!-- Label and input for born_on -->
          <div class="form-group">
            <label for="born_on" class="col-sm-2 control-label">
              Born on
            </label>
            <div class="col-sm-10">
              <input type="text" id="born_on" name="born_on" placeholder="Born on" class="form-control" value="<%= @actor.born_on %>">
            </div>
          </div>

          <!-- Label and input for image_url -->
          <div class="form-group">
            <label for="image_url" class="col-sm-2 control-label">
              Image url
            </label>
            <div class="col-sm-10">
              <input type="text" id="image_url" name="image_url" placeholder="Image url" class="form-control" value="<%= @actor.image_url %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Create Actor" class="btn btn-success">
              or
              <a href="/actors">Cancel</a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
